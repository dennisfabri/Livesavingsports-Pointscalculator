<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Bedienung"
             x:Class="de.df.points.View.IntroductionView">
    <ScrollView>
        <StackLayout Padding="4">
            <Label Text="Rettungssport Punkte" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Image Source="logo.png" HorizontalOptions="CenterAndExpand" Margin="0"/>
            <Label Text="Willkommen beim Punkterechner für DLRG-Wettkämpfe." FontSize="Small" Margin="0,0,0,16"/>

            <Label Text="Bedienung" FontSize="Large" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,0,0,8"/>
            <Label Text="Über das Menü kann zwischen Einzel und Mannschaft gewechselt werden." />
            <Label Text="Die Altersklassen können aus einer Liste ausgewählt werden." Margin="4,0,0,0"/>
            <Label Text="Eine Altersklasse kann über die Navigation 'zurück' wieder verlassen werden." Margin="4,0,0,0"/>
            <Label Text="Menüpunkt Einstellungen" />
            <Label Text="Auswahl des Jahres für die Rec-Werte" Margin="4,0,0,0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>